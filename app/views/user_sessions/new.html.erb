<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :email, User.human_attribute_name(:email), class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password, User.human_attribute_name(:password), class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.submit (t 'defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center mt-3'>
        <%= link_to (t '.to_register_page'), new_user_path, class: 'btn btn-link' %>
        <%= link_to (t '.password_forget'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
