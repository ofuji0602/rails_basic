<%= search_form_for @q, url: url do |f| %>
  <div class="input-group mb-3">
    <%= f.search_field :title_or_body_cont, class: 'form-control', placeholder: t("defaults.search_word") %>
    <%= f.search_field :user_first_name_or_user_last_name_cont, class: 'form-control', placeholder: t("defaults.search_by_user_name") %>
    <div class="input-group-append">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
