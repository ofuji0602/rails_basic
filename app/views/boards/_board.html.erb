<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <%= image_tag 'board_placeholder.png', class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <a href="#">
            <%= board.title %>
          </a>
        </h4>
        <div class='float-end'>
          <a href="#" class="text-danger"><i class="fas fa-trash pr-1 text-primary"></i></a>
          <a href="#" class="text-primary"><i class="fas fa-pen"></i></a>
        </div>
        <div>
          <div>
            <i class="far fa-user"></i>
            <%= board.user.decorate.full_name %>
          </div>
          <div>
            <i class="far fa-calendar-alt"></i>
            <%= l board.created_at, format: :long %>
          </div>
        </div>
        <p class="card-text mt-3"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
