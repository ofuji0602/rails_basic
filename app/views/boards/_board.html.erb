<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <%= image_tag board.board_image_url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to board.title, board_path(board) %>
        </h4>
        <%= render 'crud_menus', board: board %>
        <div>
          <div>
            <i class="far fa-user"></i>
            <%= board.user.decorate.full_name %>
          </div>
          <div>
            <i class="far fa-calendar-alt"></i>
            <%= l board.created_at, format: :long %>
          </div>
        </div>
        <p class="card-text mt-3"><%= truncate(board.body, length: 25, omission: '...続きを読む') %></p>
      </div>
    </div>
  </div>
</div>
